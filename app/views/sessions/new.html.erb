<% provide(:title, "Connexion") %>
<h1> Connexion </h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :password, "Mot de pase" %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.label :remember_me, "Se souvenir de moi", class: "checkbox inline" do %>
    <%= f.check_box :remember_me %>
    <span>Se souvenir de moi </span>
    <% end %>


    <%= f.submit "Connexion", class: "btn btn-primary" %>
    <% end %>
    <br/>
    <p>Nouvel utilisateur ? <%= link_to "Inscrivez vous !", signup_path %></p>
    <p> 
    </div>
  </div>